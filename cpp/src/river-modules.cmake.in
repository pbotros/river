cmake_policy (PUSH)
cmake_policy (SET CMP0057 NEW)

if (CMAKE_VERSION VERSION_LESS 3.3)
  message (FATAL_ERROR "river-modules.cmake requires the consumer "
    "to use CMake 3.3 (or newer)")
endif (CMAKE_VERSION VERSION_LESS 3.3)

set (river_MODULE_PATH "@river_FULL_CMake_DATADIR@")
list (APPEND CMAKE_MODULE_PATH ${river_MODULE_PATH})

if (NOT river_MODULE_PATH IN_LIST CMAKE_MODULE_PATH)
  message (FATAL_ERROR "Cannot add '${river_MODULE_PATH}' to "
    "CMAKE_MODULE_PATH. This will cause river-config.cmake to fail at "
    "locating required find modules. Make sure CMAKE_MODULE_PATH is not a cache variable.")
endif (NOT river_MODULE_PATH IN_LIST CMAKE_MODULE_PATH)

cmake_policy (POP)

